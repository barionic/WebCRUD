<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="
             https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="webcrudPU" transaction-type="JTA">
        <jta-data-source>jdbc/webcrudDS</jta-data-source>
        <class>br.com.barionic.webcrud.entity.Hiperlink</class>
        <class>br.com.barionic.webcrud.entity.Grupo</class>
        <class>br.com.barionic.webcrud.entity.Tag</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create-or-extend-tables"/> <!-- "create-or-extend-tables" --> <!-- drop-and-create -->
        </properties>
    </persistence-unit>
</persistence>

